<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center">
    <ImageButton
        android:id="@+id/arenaSettingsImageBtn"
        android:layout_width="350dp"
        android:layout_height="182dp" />
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/firstRadioBtn"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:buttonTint="@color/background_material_dark"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/secondRadioBtn"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:buttonTint="@color/background_material_dark"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/thirdRadioBtn"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:buttonTint="@color/background_material_dark"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fourthRadioBtn"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:buttonTint="@color/background_material_dark"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fifthRadioBtn"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:buttonTint="@color/background_material_dark"/>
    </RadioGroup>

</LinearLayout>
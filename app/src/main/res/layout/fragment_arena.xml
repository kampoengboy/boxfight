<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".HomeActivity"
    android:background="@drawable/bg">

    <TextView
        android:id="@+id/txtScoreP1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20pt"
        android:text="0"
        android:textColor="@color/background_material_light"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/btn_attack_player1"
        android:layout_toEndOf="@+id/btn_attack_player1" />

    <TextView
        android:id="@+id/txtScoreP2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20pt"
        android:text="0"
        android:textColor="@color/background_material_light"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/btn_left_player2"
        android:layout_toStartOf="@+id/btn_left_player2"
        android:layout_marginRight="27dp"
        android:layout_marginEnd="27dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PLAYER 1"
        android:id="@+id/btn_player1"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="69dp"
        android:layout_marginStart="69dp"
        android:background="#e51717"
        android:textColor="#ffffff"
        android:fontFamily="sans-serif"
        android:textAllCaps="false"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PLAYER 2"
        android:id="@+id/btn_player2"
        android:layout_alignTop="@+id/btn_player1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="77dp"
        android:layout_marginEnd="77dp"
        android:background="#1a35e4"
        android:textColor="@android:color/white"
        android:textAllCaps="false"/>


    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&lt;"
        android:id="@+id/btn_left_player1"
        android:layout_marginBottom="27dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:background="@drawable/button_boarder_1" />


    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=">"
        android:id="@+id/btn_right_player1"
        android:layout_alignTop="@+id/btn_left_player1"
        android:layout_toRightOf="@+id/btn_left_player1"
        android:layout_toEndOf="@+id/btn_left_player1"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:background="@drawable/button_boarder_1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>


    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&lt;"
        android:id="@+id/btn_left_player2"
        android:layout_alignTop="@+id/btn_attack_player1"
        android:layout_toLeftOf="@+id/btn_right_player2"
        android:layout_toStartOf="@+id/btn_right_player2"
        android:textColor="#ffffff"
        android:background="@drawable/button_boarder_1" />


    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&gt;"
        android:id="@+id/btn_right_player2"
        android:textColor="#ffffff"
        android:background="@drawable/button_boarder_1"
        android:layout_alignTop="@+id/btn_left_player2"
        android:layout_toLeftOf="@+id/btn_attack_player2"
        android:layout_toStartOf="@+id/btn_attack_player2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>


    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:indeterminate="false"
        android:layout_alignParentTop="true"
        android:background="#ffffff" />


    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar2"
        android:indeterminate="false"
        android:layout_alignTop="@+id/progressBar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#ffffff" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignBottom="@+id/btn_player1"
        android:layout_toRightOf="@+id/btn_player1"
        android:layout_toEndOf="@+id/btn_player1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_alignBottom="@+id/btn_player2"
        android:layout_toLeftOf="@+id/btn_player2"
        android:layout_toStartOf="@+id/btn_player2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_attack_player1"
        android:layout_toRightOf="@+id/btn_right_player1"
        android:layout_toEndOf="@+id/btn_right_player1"
        android:foreground="#000000"
        android:textColor="#000000"
        android:textAllCaps="false"
        android:background="@drawable/attack_1"
        android:layout_alignTop="@+id/btn_right_player1"
        android:layout_alignBottom="@+id/btn_right_player1" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_attack_player2"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:layout_alignTop="@+id/btn_right_player2"
        android:layout_alignRight="@+id/progressBar2"
        android:layout_alignEnd="@+id/progressBar2"
        android:layout_alignBottom="@+id/btn_right_player2"
        android:background="@drawable/attack_1"
        />


</RelativeLayout>
